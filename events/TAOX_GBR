			}
		}
		create_country_leader = {
			name = "George V"
			desc = "GBR_George_V_desc"
			picture = "gfx/leaders/ENG/Portrait_ENG_George_V.tga"
			expire = 1999.12.31
			ideology = social_conservatism_ideology
			traits = {
			}
		}
		create_country_leader = {
			name = "George V"
			desc = "GBR_George_V_desc"
			picture = "gfx/leaders/ENG/Portrait_ENG_George_V.tga"
			expire = 1999.12.31
			ideology = fascism_ideology
			traits = {
			}
		}
		create_country_leader = {
