country_event = { # 1.15.1910 - "General Election of December 1910"
	id = TAOX.GBR.3
	title = TAOX.GBR.3.t
	desc = TAOX.GBR.3.d
	picture = 
	trigger = {
		date > 12.2.1910
		date < 12.20.1910
		tag = GBR
	}
	fire_only_once = yes
	option = { # Social Liberals Win
		name = TAOX.GBR.3.a
		set_politics = {
			ruling_party = social_liberalism
		}
		add_ideas = {
			GBR_PM_HH_Asquith
			GBR_FAM_Edward_Grey
			GBR_TM_David_Lloyd_George
			GBR_DM_Richard_Haldane
			GBR_IM_Winston_Churchill
		}
	}
	option = { # Social Conservatives Win
		name = TAOX.GBR.3.b
		set_politics = {
			ruling_party = social_conservatism
		}
		add_ideas = {
			GBR_PM_Arthur_Balfour
			GBR_FAM_Henry_Petty-Fitzmaurice
			GBR_TM_Austen_Chamberlain
			GBR_DM_St_John_Brodrick
