		}
	}
}

country_event = { # 6.22.1911 - "Coronation of George V"
	id = TAOX_GBR.4
	title = TAOX.GBR.4.t
	desc = TAOX.GBR.4.d
	picture = 
	trigger = {
		has_country_flag = GBR_King_George_V
	}
	option = { # "God save the king."
		name = TAOX.GBR.4.a
		add_stability = 0.15
	}
}